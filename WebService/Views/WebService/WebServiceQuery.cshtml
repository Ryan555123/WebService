<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("QueryByXML", "WebService", FormMethod.Get))
            {
                <label>IP : </label>@Html.TextAreaFor(m => m.XmlIP, 1, 0, new { @class = "form-control", style = "max-width: 2000px;" })
                <br />
                <label>XMLString : </label>@Html.TextAreaFor(m => m.XmlStr, 3, 0, new { @class = "form-control", style = "max-width: 2000px;" })
                <br />
                <input type="submit" value="ByXML字串查詢" class="btn btn-info" />
            }

            @using (Html.BeginForm("QueryByExcel", "WebService", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.XmlIP)
                <br />
                @Html.HiddenFor(m => m.XmlStr)
                <div class="input-group mb-4">
                    <input type="file" name="excelFile" class="btn btn-light" />
                    <input type="submit" value="匯入Excel查詢" class="btn btn-info" />
                </div>
            }
            <input type="submit" value="資料匯出Excel" id="BtnExport" class="btn btn-link" />
            <br /><br />
            @if (ViewData["Msg"] != null && ViewData["Msg"].ToString().Equals("Success"))
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <div>
                        @ViewData["Msg"]
                    </div>
                </div>
                <br />

                System.Data.DataTable dt = ViewBag.XMLDataTable;
                <table class="table table-hover" id="QueryTable" data-export="true">
                    <thead>
                        <tr class="table-dark">
                            @foreach (DataColumn column in dt.Columns)
                            {
                                <th class="align-middle text-left">@column.ColumnName</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in dt.Rows)
                        {
                            <tr>
                                @foreach (var cell in row.ItemArray)
                                {
                                    <td class="align-middle text-left">@cell.ToString()</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else if (ViewData["Msg"] != null && !ViewData["Msg"].ToString().Equals("Success"))
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <div>
                        @ViewData["Msg"]
                    </div>
                </div>
            }
        </div>
    </div>
</div>


