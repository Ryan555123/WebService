@model IEnumerable<WebService.WebServiceData>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm("Index", "WebService", FormMethod.Get))
        {
            <div class="input-group mb-3">
                <input type="text" name="QueryStr" class="form-control" placeholder="請輸入" style="max-width:1500px; height:40px;" />
                <button class="btn btn-info">Search</button>
            </div>
        }
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="table-dark">
                        <th class="align-middle text-center">@Html.DisplayNameFor(m => m.Type)</th>
                        <th class="align-middle text-center">@Html.DisplayNameFor(m => m.IP)</th>
                        <th class="align-middle text-center">@Html.DisplayNameFor(m => m.XMLString)</th>
                        <th class="align-middle text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle text-left">@Html.DisplayFor(m => item.Type)</td>
                            <td class="align-middle text-left">@Html.DisplayFor(m => item.IP)</td>
                            <td class="align-middle text-left">@Html.DisplayFor(m => item.XMLString)</td>
                            <td class="align-middle text-center">@Html.ActionLink("Detail", "DetailDataToQuery", "WebService", new { id = item.Id }, new { @class = "btn btn-success" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



